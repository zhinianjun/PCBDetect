<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" stylesheets="@../../../css/app-dark.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pcbclient.SysInfoController">
    <children>
        <VBox alignment="CENTER" maxWidth="800" prefHeight="250" prefWidth="200" spacing="10" styleClass="card-pane">
            <children>
                <Label style="-fx-font-size: 25px;" styleClass="header-label" text="系统信息" />
                <Separator prefWidth="200" />
                <VBox alignment="CENTER" spacing="10" stylesheets="@../../../css/app-dark.css">
                    <children>
                        <Label fx:id="cpuLabel" style="-fx-font-size: 25px;" text="CPU信息" />
                        <Label fx:id="memoryLabel" style="-fx-font-size: 25px;" text="内存信息" />
                        <Label fx:id="diskLabel" style="-fx-font-size: 25px;" text="磁盘信息" />
                        <Button onAction="#onRefresh" prefHeight="43.0" prefWidth="74.0" style="-fx-font-size: 25px;" styleClass="jfx-button" text="刷新" />
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</VBox>
